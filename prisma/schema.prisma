datasource db {
  provider = "sqlite"
  url      = "file:./placeholder.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id             String   @id @default(uuid())
  email          String   @unique
  passwordHash   String
  role           String   @default("BOTH") // BUYER | SELLER | BOTH
  companyName    String
  neo4jCompanyId String?
  createdAt      DateTime @default(now())
}

model Bid {
  id             String   @id @default(uuid())
  materialName   String
  materialId     String?
  quantity       Int
  pricePerUnit   Float
  status         String   @default("pending") // pending | accepted | rejected
  bidderUserId   String
  bidderEmail    String
  bidderCompany  String
  sellerUserId   String?
  producerId     String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}
